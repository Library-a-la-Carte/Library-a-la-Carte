<% if flash[:notice] %>
	     <div id="list_error" >
	     	<%= flash[:notice] %>
	 </div>
<% end %>

<div id="page-list">	
	<div id="new_button" class="new">
	    <a href="#" onclick="$('new').toggle();$('new_button').toggle();; return false;">
	    	<span>
	        <img src="/images/icons/add.png" alt="Create New ICA Page" />
	        Create New Course Page
	    </span></a>
   </div>

	<div id="new"  style="display:none">
		<% form_tag :action => 'create' do%>
		<%= error_messages_for 'page' %>
		<div id="vertical_inputs" class="index">
			<h4>Page Title </h4><span class="more_help" onMouseover="fixedtooltip(PAGE_INDEX_TITLE_MSSG, this, event, '125');" onMouseout="delayhidetip();"><%= image_tag("/images/icons/small_help.png", :alt => 'Tip', :border => 0)%></span> 
			  <%= link_to_function 'cancel', "$('new').toggle();$('new_button').toggle();; return false;" %>
			  <%=render  :partial => "page_title"%>  
			<span><label>&nbsp;</label><%= submit_tag 'Create Page' %></span>
			
		<br />  
		</div> 
		<%end%>
	</div> 	

	<%unless @pages.size <1%>
		<div id="product-list" >
			<div id="table">
			   <%=render  :partial => "pages_list"%>  
			</div>
		</div>
	<%else%>
	   <p><b>You currently have no ICA pages. Create a new page to get started.</b></p>
	<%end%>

</div>