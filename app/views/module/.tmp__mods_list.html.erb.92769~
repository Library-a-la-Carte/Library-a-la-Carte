        <%else%> 
            
            <%= link_to image_tag("/images/icons/global.png", :title => 'Remove this Module from the global list', :alt => 'remove from global list', :border => 0), {:action => 'globalize', :id => mod , :type => mod.class, :page => @page, :sort => @sort,  :all => @all }, :confirm => 'Are you sure you want to remove this module from the global list?', :method => :post %> 
