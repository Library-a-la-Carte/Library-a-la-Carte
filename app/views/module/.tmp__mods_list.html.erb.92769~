	     | <%= link_to image_tag("/images/icons/application_add.png", :title => 'Copy this Module', :alt => 'copy', :border => 0), {:action => 'copy',  :id => mod, :type => mod.class },:class =>'space'%>
		 | <%= link_to_remote image_tag("/images/icons/remove.png", :title => 'Delete this Module', :alt => 'delete', :border => 0), :url => { :action => 'remove_from_user', :id => mod,  :type => mod.class, :page => @page, :sort => @sort,  :all => @all },:update => row_id , :confirm => 'Are you sure you want to delete this module from your list?'%>
		 
