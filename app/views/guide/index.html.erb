<% if flash[:notice] -%>
	  <div id="list_error" ><%= flash[:notice] %></div>
<% end -%>

<div id="page-list">	
	<div id="new_button" class="new">
	    <a href="#" onclick="$('new').toggle();$('new_button').toggle();; return false;">
	    	<span>
	        <img src="/images/icons/add.png" alt="Create New Guide" />
	        Create New Guide
	    </span></a>
   </div>
	
	 <div id="new"  style="display:none">
	<% form_tag :action => 'create', :id => @guide do%>
	<%= error_messages_for 'guide' %>
		<div id="vertical_inputs" class="index">
			<h4>Guide Title</h4><span class="more_help" onMouseover="fixedtooltip(GUIDE_TITLE_MSSG, this, event, '125');" onMouseout="delayhidetip();"><%= image_tag("/images/icons/small_help.png", :alt => 'Tip', :border => 0)%></span> 
			  <%= link_to_function 'cancel', "$('new').toggle();$('new_button').toggle();; return false;" %>
			  <%=render  :partial => "guide_title"%>  
			<span><label>&nbsp;</label><%= submit_tag 'Create Guide' %></span>
			<br />  
		</div> 
	<%end%>
	</div> 	
	
	<%unless @guides.size <1%>
		<div id="product-list" >
		<div id="table">
		   <%=render  :partial => "guides_list"%>  
		</div>
		</div>
	<%else%>
		<p><b>You currently have no Guides. Create a new guide to get started.</b></p>
	<%end%>
</div>