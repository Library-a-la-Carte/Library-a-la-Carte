										mod = res.mod
										%>
						     <%=toc_link_to index+1, :controller => 'ort', :action => 'lesson', :id =>@tutorial, :uid =>@unit.id,  :mid => mod, :type => mod.class%>
						 <%end%>
				   </p>
				<%end%>
		<%=link_to 'Next', {:controller => 'ort', :action => 'next_lesson', :id =>@tutorial, :uid =>@unit.id,  :mid => @mod, :type => @mod.class}, :class=>'next'%>
	</div>
	
