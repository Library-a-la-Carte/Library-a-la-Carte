					<%=link_to 'Next', {:controller => 'ort', :action => 'next_lesson', :id =>@tutorial, :uid =>@unit.id,  :mid => @mod, :type => @mod.class}, :class=>'next'%>
				</div>
	<!-- end content-column1 -->
	</div>

